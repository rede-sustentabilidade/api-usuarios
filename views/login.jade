extends layout
block content
	#login
		img(src="/images/logo.png", alt="Logo Rede Sustentabilidade", class="pure-img")
		div.box-center
			form(action='/login',method='post', class="pure-form pure-form-stacked")
				each item in messages
					p.pure-alert-error= item
				label(for='username') E-mail
				input(id='username', type='email',value='', name='username', class='pure-input-1', required)
				label(for='password') Senha
				input(id='password', type='password',value='', name='password', class='pure-input-1', required)
				label(for="remember", class="pure-checkbox")
					input(id="remember", type="checkbox")
					| Lembrar-me
				label(class="right")
					input(id='client_id', type='hidden',value='#{sess.client_id}', name='client_id')
					input(id='redirect_uri', type='hidden',value='#{sess.redirect_uri}', name='redirect_uri')
					input(id='response_type', type='hidden',value='#{sess.response_type}', name='response_type')
					input(type='submit',value='Entrar', class='pure-button pure-button-primary')
		p.box-bottom
			a(href="/registration") Registre-se!
			| &nbsp; | &nbsp;
			a(href="/lost_password") Perdeu a senha?
		p
			a(href="#{url_site}")
				| ← Voltar para o início
